# Kinich Quantum - Environment Configuration Template
# Copy to .env and configure for your environment

# ============ API Configuration ============
KINICH_API_HOST=0.0.0.0
KINICH_API_PORT=8888
KINICH_ENV=development
LOG_LEVEL=INFO

# ============ Quantum Backend Configuration ============
# Maximum concurrent quantum jobs
KINICH_MAX_CONCURRENT_JOBS=10

# Default quantum backend (qasm_simulator, azure, ibm, spinq)
KINICH_DEFAULT_BACKEND=qasm_simulator

# Enable error mitigation techniques
KINICH_ENABLE_ERROR_MITIGATION=true

# ============ Azure Quantum (Primary Backend) ============
AZURE_QUANTUM_ENABLED=false
AZURE_QUANTUM_SUBSCRIPTION_ID=your-subscription-id
AZURE_QUANTUM_RESOURCE_GROUP=your-resource-group
AZURE_QUANTUM_WORKSPACE=your-workspace-name
AZURE_QUANTUM_LOCATION=eastus

# Azure authentication (choose one)
# Option 1: Service Principal
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# Option 2: Managed Identity (for Azure VMs)
# AZURE_USE_MANAGED_IDENTITY=true

# ============ IBM Quantum (Fallback Backend) ============
IBM_QUANTUM_ENABLED=false
IBM_QUANTUM_TOKEN=your-ibm-quantum-token
IBM_QUANTUM_INSTANCE=ibm_quantum  # or ibm_cloud

# ============ SpinQ Local Hardware ============
SPINQ_ENABLED=false
SPINQ_API_URL=http://localhost:5000

# ============ Blockchain Integration ============
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_RPC=ws://localhost:9944
BLOCKCHAIN_HTTP=http://localhost:9933

# Blockchain account for submitting quantum proofs
# BLOCKCHAIN_SEED_PHRASE="your twelve word seed phrase here"
# Or use keystore file
BLOCKCHAIN_KEYSTORE_PATH=/app/keys/quantum_node.json
BLOCKCHAIN_KEYSTORE_PASSWORD=your-keystore-password

# ============ Database Configuration ============
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=kinich_quantum
POSTGRES_USER=kinich
POSTGRES_PASSWORD=change_me_in_production

# Database connection pool
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20

# ============ Storage Configuration ============
# Result storage directory
RESULTS_DIR=/app/results
CACHE_DIR=/app/cache

# Result retention (days)
RESULT_RETENTION_DAYS=30

# ============ Security Configuration ============
# JWT secret for API authentication
JWT_SECRET=change_me_to_random_string_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API keys for external integrations
KINICH_API_KEY=your-api-key-here

# Enable encryption for stored results
ENABLE_RESULT_ENCRYPTION=false
ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# ============ Monitoring & Observability ============
# Prometheus metrics endpoint
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# OpenTelemetry tracing
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ============ Performance Tuning ============
# Circuit optimization level (0-3)
CIRCUIT_OPTIMIZATION_LEVEL=2

# Cache quantum circuits
ENABLE_CIRCUIT_CACHE=true
CIRCUIT_CACHE_SIZE=1000

# Worker pool size for parallel processing
WORKER_POOL_SIZE=4

# ============ Sovereignty & Compliance ============
# Data residency requirements
DATA_RESIDENCY_REGION=BZ  # Belize
ENFORCE_DATA_SOVEREIGNTY=true

# Require BelizeID for job submission
REQUIRE_BELIZEID_AUTH=false

# ============ Development Settings ============
# Enable debug mode (verbose logging, detailed errors)
DEBUG=false

# Auto-reload on code changes (development only)
AUTO_RELOAD=false

# Enable API documentation
ENABLE_API_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc
