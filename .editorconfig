# EditorConfig configuration for Kinich
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 100
indent_size = 4

[*.{toml,yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2

[Dockerfile*]
indent_size = 2

[*.{sql,psql}]
indent_size = 2
